<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Languages"
        android:textSize="20sp" />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:src="@drawable/study"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"/>

    <CheckBox
        android:id="@+id/phpCheckbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:text="PHP" />

    <CheckBox
        android:id="@+id/javaCheckbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/phpCheckbox"
        android:layout_marginTop="10dp"
        android:text="JAVA" />

    <CheckBox
        android:id="@+id/cCheckbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/javaCheckbox"
        android:layout_marginTop="60dp"
        android:text="C" />

    <CheckBox
        android:id="@+id/cppCheckbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cCheckbox"
        android:layout_marginTop="10dp"
        android:text="C++" />

    <CheckBox
        android:id="@+id/pythonCheckbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cppCheckbox"
        android:layout_marginTop="10dp"
        android:text="PYTHON" />

    <Button
        android:id="@+id/doneButton"
        android:layout_width="208dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/pythonCheckbox"
        android:text="DONE"
        android:layout_marginTop="20dp"
        app:cornerRadius="0dp" />

    <Button
        android:id="@+id/cancelButton"
        android:layout_width="199dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/doneButton"
        android:layout_alignParentRight="true"
        android:layout_marginTop="-48dp"
        android:layout_marginRight="3dp"
        android:text="CANCEL"
        app:cornerRadius="0dp" />

    <TextView
        android:id="@+id/selectedLanguagesTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cancelButton"
        android:layout_marginLeft="5dp"
        android:text="" />

</RelativeLayout>
