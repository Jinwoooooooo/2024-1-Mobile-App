<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:text="DONGEUI INSTITUTE OF TECHNOLOGY"
        android:textColor="@color/grey"
        android:textSize="16sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:text="컴퓨터소프트웨어과"
        android:textColor="@color/black"
        android:textSize="32sp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginBottom="24dp"
        android:src="@drawable/computer"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:columnCount="2"
        android:rowCount="4"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <Button
            android:id="@+id/button_intro"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="5dp"
            android:background="@drawable/rounded_button"
            android:text="학과 소개"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/button_professors"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="5dp"
            android:background="@drawable/rounded_button"
            android:text="교수 소개"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/button_news"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="5dp"
            android:background="@drawable/rounded_button"
            android:text="학과 소식"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/button_facilities"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="5dp"
            android:background="@drawable/rounded_button"
            android:text="학과 시설"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/button_student_activities"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="5dp"
            android:background="@drawable/rounded_button"
            android:text="학생 활동"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/button_employment"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="5dp"
            android:background="@drawable/rounded_button"
            android:text="취업 정보"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/button_curriculum"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="5dp"
            android:background="@drawable/rounded_button"
            android:text="교육 과정"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/button_ai_education"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="5dp"
            android:background="@drawable/rounded_button"
            android:text="AI 특화 교육"
            android:textColor="@color/white" />
    </GridLayout>
</LinearLayout>

